#container

  .post_image
    = image_tag @post.image.url(:hero)

  .post_titles
    %h2= @post.title
    -# %p= "in: #{@post.category.name}"
    %p
      in:
      = @post.category.name

  .content
    = @post.rendered_content

.suggested_posts
  - @suggested_posts.each do |post|
    = render partial: 'posts/medium_unit', locals: {post: post}
