.home
  .latest
    .image{style: "background-image: url('#{@post.image.url(:hero)}')"}
    .titles
      %h2= @post.title
      %h3
        In:
        = @post.category.name
      %p= @post.summary
    = link_to 'READ POST', post_url(@post)

  .sidebar
    %aside
      %a{href: featured_posts_url}
        %h2 Featured

      %a{href: categories_url}
        %h2 Categories

      %a{href: posts_url}
        %h2 Other Posts
